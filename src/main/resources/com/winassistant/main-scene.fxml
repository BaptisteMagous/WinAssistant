<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="600.0" maxWidth="-Infinity" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.winassistant.controller.Controller">
   <HBox fx:id="headerPane" alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" style="-fx-background-color: #cfFfcf;">
      <children>
         <Button fx:id="menuButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goToMainMenu" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #00000000;" textAlignment="CENTER">
            <graphic>
               <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@WinAssistant.png" />
                  </image>
               </ImageView>
            </graphic></Button>
         <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#changeOrientation" prefHeight="25.0" prefWidth="47.0" text="&lt;-&gt;" />
         <Button fx:id="userButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goToUserProfile" prefHeight="50.0" prefWidth="206.0" style="-fx-background-color: #00000000;" text="Options" textAlignment="CENTER" />
         <Button fx:id="hideButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onMinimiseButtonClick" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #9fDf9f;" text="X" textAlignment="CENTER" />
      </children>
   </HBox>
   <Pane fx:id="content" minHeight="300.0" prefWidth="200.0">
      <children>
         <Pane prefHeight="178.0" prefWidth="200.0" style="-fx-background-color: red;" />
      </children>
   </Pane>
</VBox>
